extends ../shared/layout.jade

block content
    h1 Login Page
    form.form-signin(name='login', action='/account/login', method='post')
        h2.form-signin-heading Please sign in
        label.sr-only(for='inputEmail') Username
        input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input.form-control(type='password', name='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit', name='login') Sign in